{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Bubble Chart of Terrorist Attacks and Deaths in Selected Countries with Year Selection",
  "title": "Terrorist Attacks vs Deaths in Selected Countries",
  "data": {
    "url": "https://raw.githubusercontent.com/DahamJay1614/Visualaization2/refs/heads/main/Visualization%202%20Terrorist%20Data%20set.csv",
    "format": {"type": "csv"}
  },
  "params": [
    {
      "name": "selectedYear",
      "value": 2021,
      "bind": {
        "input": "select",
        "options": [2013, 2014, 2015, 2016, 2017, 2018, 2019, 2020, 2021],
        "labels": ["2013", "2014", "2015", "2016", "2017", "2018", "2019", "2020", "2021"],
        "name": "Select Year: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Year == selectedYear"},
    {
      "filter": "datum.Entity == 'Malaysia' || datum.Entity == 'Afghanistan' || datum.Entity == 'India' || datum.Entity == 'Iraq' || datum.Entity == 'Nigeria' || datum.Entity == 'Pakistan' || datum.Entity == 'United States'"
    }
  ],
  "mark": {"type": "circle", "opacity": 0.7},
  "encoding": {
    "x": {
      "field": "Terrorist attacks",
      "type": "quantitative",
      "title": "Number of Attacks"
    },
    "y": {
      "field": "Terrorism deaths",
      "type": "quantitative",
      "title": "Number of Deaths"
    },
    "size": {
      "field": "Terrorism deaths",
      "type": "quantitative",
      "scale": {"range": [100, 2000]},
      "legend": {"title": "Size: Number of Deaths"}
    },
    "color": {
      "field": "Entity",
      "type": "nominal",
      "scale": {
        "range": ["#1f77b4", "#ff7f0e", "#2ca02c", "#9467bd", "#8c564b", "#e377c2", "#7f7f7f"]
      },
      "title": "Country"
    },
    "tooltip": [
      {"field": "Entity", "type": "nominal", "title": "Country"},
      {"field": "Year", "type": "quantitative", "title": "Year"},
      {"field": "Terrorist attacks", "type": "quantitative", "title": "Number of Attacks"},
      {"field": "Terrorism deaths", "type": "quantitative", "title": "Number of Deaths"}
    ]
  },
  "width": 800,
  "height": 400
}
