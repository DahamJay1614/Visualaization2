{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 500,
  "title": "Global Terrorist Attacks",
  "data": {
    "url": "https://raw.githubusercontent.com/DahamJay1614/Visualaization2/refs/heads/main/Visualization%202%20Terrorist%20Data%20set.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "filter": "datum.Year == yearSelection"  
    },
    {
      "lookup": "Code",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/DahamJay1614/Visualaization2/refs/heads/main/ne_110m_admin_0_countries1.topojson",
          "format": {
            "type": "topojson",
            "feature": "ne_110m_admin_0_countries"
          }
        },
        "key": "properties.ISO_A3",
        "fields": ["type", "geometry", "properties.NAME"]
      }
    }
  ],
  "projection": {
    "type": "naturalEarth1"
  },
  "mark": {
    "type": "geoshape",
    "stroke": "black"
  },
  "params": [
    {
      "name": "yearSelection",
      "value": 2021,
      "bind": {
        "input": "select",
        "options": [2001,2013,2014,2015,2016,2017,2018, 2019, 2020, 2021],
        "name": "Select Year: "
      }
    }
  ],
  "encoding": {
    "color": {
      "field": "Terrorist attacks",
      "type": "quantitative",
      "title": "Number of Attacks",
      "scale": {
        "range": ["#ffffb2", "#fecc5c", "#fd8d3c", "#e31a1c", "#b10026"],
        "domain": [0, 2000]
      }
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Terrorist attacks", "type": "quantitative", "title": "Number of Attacks"},
      {"field": "Terrorism deaths", "type": "quantitative", "title": "Number of Deaths"},
      {"field": "Year", "type": "nominal", "title": "Year"}
    ]
  }
}
