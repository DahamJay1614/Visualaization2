{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 500,
  "title": "Global Terrorist Attacks",
  "data": {
    "url": "https://raw.githubusercontent.com/DahamJay1614/Visualaization2/refs/heads/main/Visualization%202%20Terrorist%20Data%20set.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "filter": "datum.Year == yearSelection"
    },
    {
      "lookup": "Code",  // Matches Code from CSV with ISO_A3 in TopoJSON
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/DahamJay1614/Visualaization2/refs/heads/main/ne_110m_admin_0_countries1.topojson",
          "format": {
            "type": "topojson",
            "feature": "ne_110m_admin_0_countries"
          }
        },
        "key": "properties.ISO_A3",  // Matches ISO_A3 in TopoJSON
        "fields": ["type","geometry", "properties.NAME"]
      }
    }
  ],
  "projection": {
    "type": "mercator"
  },
  "mark": {
    "type": "geoshape",
    "stroke": "black"
    
  },
  "params": [
    {
      "name": "yearSelection",
      "value": 2021,
      "bind": {
        "input": "select",
        "options": [2018,2019, 2020, 2021],
        "name": "Select Year: "
      }
    }
  ],
  "encoding": {
    "color": {
      "field": "Terrorist attacks",  // Colors by the number of terrorist attacks
      "type": "quantitative",
      "title": "Number of Attacks",
      "scale": {"range": ["#ffffff", "#ff0000"],  // Gradient from white to red
        "domain": [0, 2000]}  // Red color scheme to indicate intensity
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Terrorist attacks", "type": "quantitative", "title": "Number of Attacks"},
      {"field": "Terrorism deaths", "type": "quantitative", "title": "Number of Deaths"},
      {"field": "Year", "type": "nominal", "title": "Year"}
    ]
  }
}
